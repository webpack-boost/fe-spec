{
  "name": "lok-front-spec",
  "private": true,
  "description": "编码规范工程化工具包",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "spellcheck": "cspell lint --dot --gitignore --color --cache \"packages/**/*.@(js|cjs|mjs|ts|tsx|css|scss|md)\"",
    "markdownlint": "markdownlint *.{md}",
    "clean": "rimraf node_modules",
    "commit": "cz && pnpm run changelog",
    "changelog": "npx conventional-changelog -p conventionalcommits -i CHANGELOG.md -s",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "standardization",
    "engineering",
    "toolkit"
  ],
  "author": "632357135@qq.com",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "conventional-changelog": "^7.1.1",
    "cspell": "8.9.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^8.0.3",
    "lerna": "8.2.4",
    "markdownlint": "^0.38.0",
    "rimraf": "^6.0.1",
    "vitepress": "^1.6.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}